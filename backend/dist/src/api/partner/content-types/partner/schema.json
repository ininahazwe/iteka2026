{
    "kind": "collectionType",
    "collectionName": "partners",
    "info": {
        "singularName": "partner",
        "pluralName": "partners",
        "displayName": "Partner"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name"
        },
        "logo": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": ["images"]
        },
        "description": {
            "type": "string"
        },
        "website": {
            "type": "string"
        },
        "partnership_type": {
            "type": "enumeration",
            "enum": ["Financial", "Technical", "Strategic"]
        },
        "is_featured": {
            "type": "boolean",
            "default": false
        },
        "order": {
            "type": "integer",
            "default": 0
        }
    }
}
