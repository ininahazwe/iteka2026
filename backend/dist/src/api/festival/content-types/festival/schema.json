{
    "kind": "singleType",
    "collectionName": "festivals",
    "info": {
        "singularName": "festival",
        "pluralName": "festivals",
        "displayName": "Festival"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "default": "Iteka African Culture Festival"
        },
        "edition": {
            "type": "string"
        },
        "description": {
            "type": "richtext",
            "required": true
        },
        "date_start": {
            "type": "date"
        },
        "date_end": {
            "type": "date"
        },
        "location": {
            "type": "string"
        },
        "hero_image": {
            "type": "media",
            "multiple": false,
            "allowedTypes": ["images"]
        },
        "gallery": {
            "type": "media",
            "multiple": true,
            "allowedTypes": ["images", "videos"]
        },
        "program_pdf": {
            "type": "media",
            "multiple": false,
            "allowedTypes": ["files"]
        },
        "registration_url": {
            "type": "string"
        }
    }
}
